<Page x:Class="CarInsurance.Pages.Admin.AddStaffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CarInsurance.Pages.Admin"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="AddStaffPage">

    <Grid Background="White">
        <Button Name="ButtonBack"
                Content="Назад"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Click="ButtonBack_Click" />
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Логин" />
            <TextBox Name="TextBoxLogin"
                     Width="170" />
            <TextBlock Text="Пароль" />
            <TextBox Name="TextBoxPassword"
                     Width="170" />
            <TextBlock Text="Роль"/>
            <ComboBox Name="ComboBoxRole"
                      DisplayMemberPath="Name"/>
            <Button Margin="0,10,0,0"
                    Name="ButtonLogin"
                    Content="Добавить"
                    Click="ButtonLogin_Click" />
        </StackPanel>
    </Grid>
</Page>
